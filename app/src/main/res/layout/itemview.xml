<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c1Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width= "35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width= "0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/ivProfile"
            app:layout_constraintEnd_toStartOf="@+id/menu"
            android:layout_margin="10dp"
            android:text="fitrah@gmail.com"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/message"
            android:layout_width= "0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/ivProfile"
            app:layout_constraintEnd_toStartOf="@+id/menu"
            android:text="Kuala Terengganu"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>

        <ImageView
            android:id="@+id/menu"
            android:layout_width= "wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="@+id/ivProfile"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/feral"
        app:layout_constraintTop_toBottomOf="@+id/c1Top"
        tools:layout_editor_absoluteX="-16dp" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_favorite_24"
        app:layout_constraintTop_toBottomOf="@+id/ivPost"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ivname"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivLike"
        android:padding="10dp"
        android:text="Ruby"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/ivgender"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivname"
        android:padding="10dp"
        android:text="Female"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/ivage"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivgender"
        android:padding="10dp"
        android:text="3 Years "
        android:textSize="16sp"/>

    <Button
        android:id="@+id/ivComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View"
        android:backgroundTint="#3F51B5"
        app:layout_constraintTop_toBottomOf="@+id/ivage" />



</androidx.constraintlayout.widget.ConstraintLayout>